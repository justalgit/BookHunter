<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BookHunter" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_dark</item>
        <item name="colorPrimaryVariant">@color/variant_red_dark</item>
        <item name="colorOnPrimary">@color/light_grey</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cyan</item>
        <item name="colorSecondaryVariant">@color/cyan</item>
        <item name="colorOnSecondary">@color/light_grey</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark_grey</item>

        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor" tools:targetApi="l">@color/dark_grey</item>
        <item name="colorSurface">@color/dark_grey</item>
        <item name="colorOnSurface">@color/light_grey</item>
        <item name="android:textColor">@color/light_grey</item>

    </style>
</resources>